  | IRType.object     => "!lz.value" -- "lean_object*"
  | IRType.tobject    => "!lz.value" -- "lean_object*"
  | IRType.irrelevant => "!lz.value" -- "lean_object*"
  | IRType.struct _ _ => panic! "not implemented yet"
  | IRType.union name arrtys  => toString name
