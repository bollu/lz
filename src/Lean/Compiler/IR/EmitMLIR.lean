  let q := "\"";
  let q := s.foldl
    (fun q c => q ++
      if c == '\n' then "\\n"
      else if c == '\n' then "\\t"
      else if c == '\\' then "\\\\"
      else if c == '\"' then "\\\""
      -- commented by bollu
